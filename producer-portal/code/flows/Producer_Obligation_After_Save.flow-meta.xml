<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <name>Status_Need_to_Change_to_Confirm_Decision</name>
        <label>Status Need to Change to Confirm Decision</label>
        <locationX>182</locationX>
        <locationY>323</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Status_Need_to_Change_to_Confirm_Outcome</name>
            <conditionLogic>(1 OR 4) AND 2 AND 3</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Locked_UK_Calc__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Confirmed_Quarter__c</leftValueReference>
                <operator>GreaterThanOrEqualTo</operator>
                <rightValue>
                    <numberValue>4.0</numberValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Status__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Confirmed</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Producer_Contract__r.Obligation_Type__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Non-Household</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Status_to_Confirmed</targetReference>
            </connector>
            <label>Status Need to Change to Confirm Outcome</label>
        </rules>
    </decisions>
    <description>06-01-2025: Lock UK Cal is not required for Non-Household
09-12-2024 : status needs to be updated to confirmed</description>
    <environments>Default</environments>
    <interviewLabel>Producer Obligation - After Save {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Producer Obligation - After Save</label>
    <processMetadataValues>
        <name>BuilderType</name>
