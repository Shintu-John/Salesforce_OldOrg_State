            <targetReference>Get_Job_Supplier_Cost</targetReference>
        </connector>
        <filterLogic>1 AND 2 AND 3 AND 4 AND 5</filterLogic>
        <filters>
            <field>CreatedDate</field>
            <operator>GreaterThan</operator>
