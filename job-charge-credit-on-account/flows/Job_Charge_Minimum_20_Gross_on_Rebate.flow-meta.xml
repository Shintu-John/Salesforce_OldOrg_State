                <dateTimeValue>2025-01-15T00:01:00.000Z</dateTimeValue>
            </value>
        </filters>
        <filters>
            <field>Charge_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Rebate</stringValue>
            </value>
        </filters>
        <filters>
            <field>Vendor_Account__c</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>0012400000UtGrjAAF</stringValue>
            </value>
        </filters>
        <filters>
            <field>Vendor_Account__c</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>0012400000kFifTAAS</stringValue>
            </value>
        </filters>
        <filters>
            <field>Vendor_Account__c</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>0012400000RIw4FAAT</stringValue>
            </value>
        </filters>
        <object>Job_Charge__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
